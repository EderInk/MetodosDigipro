
                                                       
                                                   

    

                 
                           
                                                                   

                 
                           
                                                                                   

                 
                           
                                                                                         

                 
                                
                                                                                         

                                           
           

    <LinearLayout
        android:id="@+id/ParentContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:tag="layout/elemento_audio_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:id="@+id/visible_enable"
            android:tag="binding_1"                                           
                                                                           
                                                                     
                                                                        
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/elemento_header"
                layout="@layout/widget_elemento_header"
                                          
                                           />

            <TextView
                android:id="@+id/tvDuration"
                android:tag="binding_2"                                    
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                                                                                    
                android:textSize="18sp"
                android:visibility="gone"                                                                                                              />

            <LinearLayout
                android:id="@+id/layout_record_stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_new"
                        android:tag="binding_3"                 
                        android:layout_width="wrap_content"
                                                                                         
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/btnRecord"
                            android:tag="binding_4"                                   
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                                                                                                       
                            android:src="@drawable/ic_action_mic_on"
                            android:tint="@color/White"
                            app:backgroundTint="@color/colorAccent"
                            app:fabSize="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_cancelarReemplazo"
                        android:tag="binding_5"                                                
                                                                                             
                        android:layout_width="wrap_content"
                                                                                         
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_cancelar_reemplazo_audio"
                            android:tag="binding_6"                                   
                                                                                                   
                                                                                                 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                                                                                                               
                            android:src="@drawable/ic_clancel_24dp"
                            app:backgroundTint="@color/colorAccent"
                            app:fabSize="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_exist"
                        android:tag="binding_7"                   
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:tag="binding_8"                                          
                            tools:visibility="visible">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/play_fab"
                                android:tag="binding_9"                                   
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_margin="5dp"
                                                                                                          
                                android:src="@drawable/ic_play_arrow_white_24dp"
                                app:backgroundTint="@color/colorAccent"
                                app:fabSize="normal" />

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/btnStopAudio"
                                android:tag="binding_10"                                  
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_margin="5dp"
                                android:visibility="gone"
                                                                                                                 
                                android:src="@drawable/ic_stop_white_24dp"
                                app:backgroundTint="@color/colorAccent"
                                app:fabSize="normal"
                                tools:visibility="visible"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:tag="binding_11"                                         
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab_eliminar_audio"
                                android:tag="binding_12"                                  
                                                                                    
                                                                                                        
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                                                                                               
                                android:src="@drawable/ic_delete_forever_white_24dp"
                                app:backgroundTint="@color/colorAccent"
                                app:fabSize="normal" />

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab_remplazar_2"
                                android:tag="binding_13"                                  
                                                                                                                    
                                                                                                 
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                                                                                                   
                                android:src="@drawable/ic_retry_white_24dp"
                                app:backgroundTint="@color/colorAccent"
                                app:fabSize="normal" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_download"
                        android:tag="binding_14"                         
                                                                                         
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_download"
                            android:tag="binding_15"                     
                                                                                      
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                                                                                                           
                            android:src="@drawable/ic_download_anexos_white"
                            android:visibility="visible"
                            app:backgroundTint="@color/colorAccent"
                            app:fabSize="normal" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_remplazar_1"
                            android:tag="binding_16"                                  
                                                                                                                
                                                                                             
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                                                                                                               
                            android:src="@drawable/ic_retry_white_24dp"
                            android:visibility="visible"
                            app:backgroundTint="@color/colorAccent"
                            app:fabSize="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:tag="binding_17"                  
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <Spinner
                            android:id="@+id/spinner_anexos_tipodoc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:minHeight="40dp"
                            android:textSize="18sp"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/timeplayingtxt"
                android:tag="binding_18"                                   
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:visibility="gone"
                                                                                  
                android:textSize="18sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="15dp"
                android:background="#B1BCBE" />

        </LinearLayout>

        <View
            android:layout_width=".001dp"
            android:layout_height=".001dp"
            android:background="#B1BCBE" />

    </LinearLayout>

         