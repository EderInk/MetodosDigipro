        android:id="@+id/ParentContent"
        android:tag="layout/elemento_tabber_0"                        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"  xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:id="@+id/visible_enable"
            android:tag="binding_1"                                           
                                                                           
                                                                     
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/border_round"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:tag="binding_2"         
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_info_color"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Titulo"
                android:layout_marginTop="5dp" />

            <TextView
                android:tag="binding_3"                                                      
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                                                                                         
                android:textColor="@color/White"
                android:textSize="16dp"
                android:textStyle="bold"
                android:visibility="gone"                                                                                                          />


        </LinearLayout>

        <View
            android:layout_width=".001dp"
            android:layout_height=".001dp"
            android:background="#B1BCBE" />

    </LinearLayout>

         