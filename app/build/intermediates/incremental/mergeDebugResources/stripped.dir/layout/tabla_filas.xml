        android:id="@+id/ParentContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:tag="layout/tabla_filas_0" xmlns:android="http://schemas.android.com/apk/res/android">
        <!--disableSeccion='@{fila.getBooleanValorAttr("habilitado")}'-->

        <LinearLayout
            android:id="@+id/visible_enable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/border_round_tabla"
            android:orientation="vertical">

            <!--invisiblelinearlayout='@{fila.getBooleanValorAttr("visible")}'-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center|top"
                    android:tag="binding_1"                                    
                    android:textSize="19sp"
                    android:textStyle="bold" />
                <!--disableText='@{fila.getBooleanValorAttr("habilitado")}'-->
                <!--android:text='@{fila.getStringValorAttr("titulo")}'-->

                <ImageView
                    android:id="@+id/removeRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/Titulo"
                    android:src="@drawable/ic_remove_row" />

                <!--android:visibility='@{elemento.getBooleanValorAttr("requerido") ? View.VISIBLE : View.GONE,default=visible}'-->
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerViewColumnas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Titulo" />


        </LinearLayout>

        <View
            android:layout_width=".001dp"
            android:layout_height=".001dp"
            android:background="#B1BCBE" />

    </LinearLayout>

         