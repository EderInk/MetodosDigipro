
                                                       
                                                   

    

                                                              
           

    <RelativeLayout
        android:id="@+id/all_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF444444"
        android:keepScreenOn="true" android:tag="layout/componente_firmavideo_new_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <!-- Camera -->
        <!--        android:layout_below="@+id/layoutHuawei"-->

        <RelativeLayout
            android:id="@+id/layoutNormal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <SurfaceView
                android:id="@+id/surfaceview"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#77A8A8A8" />

            <!--</LinearLayout>-->

            <!--  <View
              android:id="@+id/separador"
              android:layout_width="match_parent"
              android:layout_height="3dp"
              android:layout_below="@id/ll"
              android:background="@color/White" />-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_camera">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/ayudaFoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_help_white"
                        android:visibility="gone"
                        app:backgroundTint="@color/colorFABAyuda"
                        app:fabSize="mini" />

                </RelativeLayout>

                <!-- Controls -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="16dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/sign_layout_instructions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#C15aae1a">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Muestra tu rostro frente a la cÃ¡mara para poder firmar."
                            android:textColor="@color/black" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/sign_layout"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:visibility="invisible"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="22dp"
                        app:cardBackgroundColor="#77A8A8A8"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/border_firma_video"
                            android:orientation="vertical">

                            <com.github.gcacace.signaturepad.views.SignaturePad
                                android:id="@+id/signaturePad"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                app:penColor="@android:color/black" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/layoutss"
                        android:layout_width="500dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:gravity="center|bottom"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/line_sign_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="Firma"
                            android:textColor="#000"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/info_sign"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_datosvideofad"
                            android:gravity="start"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:visibility="invisible">

                            <TextView
                                android:id="@+id/line_sign_hora"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/line_sign_text"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="4dp"
                                android:gravity="center"
                                android:text="Hora"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/line_sign_ubicacion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/line_sign_hora"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="4dp"
                                android:gravity="center"
                                android:text="Ubicacion"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/line_sign_info_device"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/line_sign_ubicacion"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="10dp"
                                android:gravity="center"
                                android:text="Informacion"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_textovideofad"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tyc_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:ellipsize="end"
                            android:maxLines="4"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:visibility="gone" />

                        <com.izikode.izilib.veinview.VeinView
                            android:id="@+id/tyc_webview"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"
                            tools:visibility="visible"/>

                        <ImageButton
                            android:id="@+id/btnExpand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:layout_margin="5dp"
                            android:background="@color/colorTransparente"
                            android:contentDescription="Expand"
                            android:src="@drawable/expand"
                            android:visibility="gone" />

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_cancelar_camara_firma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:gravity="start"
                android:src="@drawable/ic_close_white_24dp"
                app:backgroundTint="@color/colorFABCancelar"
                app:fabSize="mini" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_retry_camara_firma"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/fab_tratamiento_cancelar"
                android:gravity="center"
                android:src="@drawable/ic_retry_white_24dp"
                android:visibility="invisible"
                app:backgroundTint="@color/colorFABRetry"
                app:fabSize="normal" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/stopVideo"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/fab_tratamiento_cancelar"
                android:gravity="center"
                android:src="@drawable/ic_stop_video"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_stop_white_24dp"
                app:backgroundTint="@color/colorFABCancelar"
                app:fabSize="normal" />

        </RelativeLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_permitir_tomar_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:gravity="center_horizontal"
            android:src="@drawable/ic_close_white_24dp"
            app:backgroundTint="@color/colorFABCancelar"
            app:fabSize="mini" />

    </RelativeLayout>

         