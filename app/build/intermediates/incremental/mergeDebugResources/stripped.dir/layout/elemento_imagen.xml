
                                                        

    

                 
                           
                                                                   

                 
                           
                                                                                   

                 
                           
                                                                                          

                 
                                
                                                                                         

                                           

           

    <LinearLayout
        android:id="@+id/ParentContent"
        android:tag="layout/elemento_imagen_0"                                  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/visible_enable"
            android:tag="binding_1"                                        
                                                                        
                                                                     
                                                                              
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/elemento_header"
                layout="@layout/widget_elemento_header"
                                          
                                           />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/preview_foto"
                    android:tag="binding_2"                                  
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="@color/transparentGray"
                    android:contentDescription="@string/elemento_firma_cd"
                                                                                                 
                    android:padding="60dp"
                    android:src="@drawable/ic_photo_library_black_24dp"
                    android:visibility="gone"                                                                                               />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_new"
                        android:tag="binding_3"                 
                                                                                         
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_tomar_foto"
                            android:tag="binding_4"                                   
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="5dp"
                            android:visibility="gone"                                                                                    
                                                                                                  
                            android:src="@drawable/ic_action_scanbot_white"
                            app:backgroundTint="@color/colorAccent"
                            app:fabSize="normal" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_importar_foto"
                            android:tag="binding_5"                                   
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_margin="5dp"
                            android:visibility="gone"                                                                                      
                                                                                                        
                            android:src="@drawable/ic_note_add_white_24dp"
                            app:backgroundTint="@color/colorAccent"
                            app:fabSize="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_cancelarReemplazo"
                        android:tag="binding_6"                              
                                                                                         
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_cancelar_reemplazo"
                            android:tag="binding_7"                                   
                                                                                 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                                                                                                               
                            android:src="@drawable/ic_clancel_24dp"
                            app:backgroundTint="@color/colorAccent"
                            app:fabSize="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_exist"
                        android:tag="binding_8"                   
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:tag="binding_9"              
                                                                                             
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab_recortar_foto"
                                android:tag="binding_10"                                  
                                                                                 
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_margin="5dp"
                                                                                                         
                                android:src="@drawable/ic_crop_rotate"
                                app:backgroundTint="@color/colorAccent"
                                app:fabSize="normal" />

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab_filtro_foto"
                                android:tag="binding_11"                                  
                                                                                                              
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_margin="5dp"
                                                                                                            
                                android:src="@drawable/ic_photo_filter_white_24dp"
                                app:backgroundTint="@color/colorAccent"
                                app:fabSize="normal" />

                        </LinearLayout>

                        <LinearLayout
                            android:tag="binding_12"                                         
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab_abrir_foto"
                                android:tag="binding_13"                                  
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_margin="5dp"
                                                                                                             
                                android:src="@drawable/ic_view_photo_white_24dp"
                                app:backgroundTint="@color/colorAccent"
                                app:fabSize="normal" />

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab_eliminar_foto"
                                android:tag="binding_14"                                  
                                                               
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_margin="5dp"
                                                                                                               
                                android:src="@drawable/ic_delete_forever_white_24dp"
                                app:backgroundTint="@color/colorAccent"
                                app:fabSize="normal" />

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab_remplazar_2"
                                android:tag="binding_15"                                  
                                                                                                      
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_margin="5dp"
                                                                                                                   
                                android:src="@drawable/ic_retry_white_24dp"
                                app:backgroundTint="@color/colorAccent"
                                app:fabSize="normal" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_download"
                        android:tag="binding_16"                         
                                                                                         
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_download"
                            android:tag="binding_17"                     
                                                                                      
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                                                                                                           
                            android:src="@drawable/ic_download_anexos_white"
                            android:visibility="gone"
                            app:backgroundTint="@color/colorAccent"
                            app:fabSize="normal" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_remplazar_1"
                            android:tag="binding_18"                                  
                                                                                                  
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                                                                                                               
                            android:src="@drawable/ic_retry_white_24dp"
                            android:visibility="gone"
                            app:backgroundTint="@color/colorAccent"
                            app:fabSize="normal" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:tag="binding_19"                  
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <Spinner
                    android:id="@+id/spinner_anexos_tipodoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:minHeight="40dp"
                    android:textSize="18sp"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="15dp"
                android:background="#B1BCBE"
                android:tag="binding_20"                                                                   />

        </LinearLayout>

        <View
            android:layout_width=".001dp"
            android:layout_height=".001dp"
            android:background="#B1BCBE" />

    </LinearLayout>

         