        android:id="@+id/ParentContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:tag="layout/elemento_texto_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/visible_enable"
            android:tag="binding_1"                                           
                                                                     
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/elemento_header"
                layout="@layout/widget_elemento_header"
                                          
                                           />

            <TextView
                android:id="@+id/maskedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"                                                                                                 
                android:tag="binding_2"                                      />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtInput"
                    android:tag="binding_3"                                        
                                                                               
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="10dp"
                                                                            
                    android:inputType="textFilter|textNoSuggestions|textVisiblePassword"
                    android:imeOptions="actionNext"
                                                                                         
                                                                          
                    android:textSize="18sp" />
                <!--actCursor='@{elemento.getBooleanValorAttr("cursor")}'-->

            </RelativeLayout>

            <!--android:background="@drawable/border_round_mensajes"-->

            <!--public String MensjaeRespuestaServicioColor = "";-->
        </LinearLayout>

        <View
            android:layout_width=".001dp"
            android:layout_height=".001dp"
            android:background="#B1BCBE" />

    </LinearLayout>

         
