<?xml version="1.0" encoding="utf-8"?>

                                                   

    

                 
                           
                                                                   

                 
                           
                                                                                   

                                           

                                                                  

                                                                           

           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:tag="layout/widget_elemento_header_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:tag="binding_1"                                                                 
                                                                                                    
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/border_round_msj_error"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
                                                                             
            android:textSize="16dp"
            android:textStyle="bold"
            android:visibility="gone"                                                                                               
            tools:visibility="visible" />

        <TextView
            android:tag="binding_2"                                                      
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:paddingBottom="5dp"
                                                                                     
            android:textColor="@color/White"
            android:textSize="16dp"
            android:textStyle="bold"
            android:visibility="gone"                                                                                                         
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight=".9"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/info_btn"
                    android:tag="binding_3"         
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:contentDescription="Ayuda"
                    android:src="@drawable/help_icon_3"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/asterisk"
                    android:layout_width="13dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:contentDescription="Requerido"
                    android:src="@drawable/ic_asterisk_2"
                    android:visibility="gone"                                                                                
                    tools:visibility="visible"  android:tag="binding_4"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_text_idelemento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="binding_5"              
                        android:textSize="18sp"
                        android:visibility="gone"                                                                
                        tools:text="idElemento"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/title_text"
                        android:tag="binding_6"                                            
                                                                                   
                                                      
                                                             
                                                                                       
                                                                                          
                                                                                 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                                                                               
                        android:textSize="18sp"
                        android:visibility="gone"                                                                                      
                        tools:text="Titulo"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/subtitle_text"
                        android:tag="binding_7"                                    
                                                             
                                                                                       
                                                                                 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                                                                                  
                        android:textSize="13sp"
                        android:visibility="gone"                                                                                         
                        tools:text="Subtitulo"
                        tools:visibility="visible" />
                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/btnVideo"
                android:tag="binding_8"                    
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/border_round_elemento_boton_warning"
                android:contentDescription="Ayuda"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_video_help"
                android:tint="@color/white"
                android:visibility="gone"                                                                                                                                                                                                              
                tools:visibility="visible" />

            <ImageButton
                android:id="@+id/btnTooltip"
                android:tag="binding_9"                          
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:contentDescription="Ayuda"
                android:padding="0dp"
                android:src="@drawable/help_icon_3"
                android:tint="#B1AFAF"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

         